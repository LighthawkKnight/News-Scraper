<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">r/worldnews Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link active" href="/saved">Saved Posts 
                <span class="sr-only">(current)</span>
            </a>
        </div>
    </div>
</nav>

<div class = "container">
    <div class="row">
        <div class="col-sm-12">
            <br>
            <div class="card">
                <div class="card-header">
                    <strong>
                    <i class="fa fa-table"></i> Saved Posts</strong>
                </div>
                <div class="card-body" id="posts-section">
                    {{#if posts}}
                    {{#each posts}}
                        <ul class = "list-group">
                            <ul class = "list-group-item">
                                <h5><strong>{{title}}</strong></h5>
                                <a href={{link}}>{{link}}</a><br><br>
                                <button data="{{_id}}" data-title="{{title}}" class="btn btn-success btn-sm comment-btn">Comments</button>
                                <form action = "/api/unsave" method = "POST">
                                    <input hidden name = "id" value = {{_id}}> 
                                    <button id="{{_id}}"class="btn btn-danger btn-sm unsave-btn" type = "submit">Unsave</button>
                                </form>
                                
                            </ul>
                        </ul>
                    {{/each}}
                    {{else}}
                        <ul class = "list-group">
                            <ul class = "list-group-item">
                                <h5>No posts yet</h5>
                            </ul>
                        </ul>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Comments for: <span id = "post-title"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush posts-available">
                    </ul>
                </div>
                <br/>
                <div class="form-group">
                    <label for="comment-input" class="sr-only">Enter comment Here</label>
                    <textarea class="form-control" id="comment-input" rows="3" placeholder="New Comment"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="save-comment">Save</button>
            </div>
        </div>
    </div>
</div>