<div class = "container">
    <div class="row">
        <div class="col-sm-12">
            <br>
            <!-- This card will initially be made up of a card and wells for each of the articles retrieved -->
            <div class="card">

                <!-- card Heading for the retrieved articles box -->
                <div class="card-header">
                    <strong>
                    <i class="fa fa-table"></i> Saved Posts</strong>
                </div>

                <!-- This main card will hold each of the resulting articles -->
                <div class="card-body" id="posts-section">
                    {{#if posts}}
                    {{#each posts}}
                        <ul class = "list-group">
                            <ul class = "list-group-item">
                                <h5><strong>{{title}}</strong></h5>
                                <a href={{link}}>{{link}}</a><br><br>
                                <form action = "/api/unsave" method = "POST">
                                    <input hidden name = "id" value = {{_id}}> 
                                    <button id="{{_id}}"class="btn btn-danger btn-sm unsave-btn" type = "submit">Unsave</button>
                                </form>
                            </ul>
                        </ul>
                    {{/each}}
                    {{else}}
                        <ul class = "list-group">
                            <ul class = "list-group-item">
                                <h5>No posts yet</h5>
                            </ul>
                        </ul>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>